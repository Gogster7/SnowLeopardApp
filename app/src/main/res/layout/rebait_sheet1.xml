<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rebaitSheetContainer1"
    android:background="@drawable/rebait_sheet_background"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="15dp"
        android:text="Re-Bait Now"
        android:textColor="@color/rPrimaryText"
        android:textSize="28dp"
        android:textStyle="bold" />

    <View
        android:id="@+id/topL"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="10dp"
        android:background="@color/rDivider"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">

        <TextView
            android:id="@+id/cameraQ"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:gravity="center"
            android:fontFamily="sans-serif"
            android:text="Is Camera Operational?"/>

        <RadioGroup
            android:id="@+id/camGroup"
            android:layout_below="@+id/cameraQ"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/yesId"
                android:layout_margin="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/rSecondaryText"
                android:checked="false"
                android:fontFamily="sans-serif"
                android:text="YES"
                android:textColor="@color/rSecondaryText"
                android:textSize="18sp" />

            <RadioButton
                android:id="@+id/noId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:buttonTint="@color/rSecondaryText"
                android:checked="false"
                android:fontFamily="sans-serif"
                android:text="NO"
                android:textColor="@color/rSecondaryText"
                android:textSize="18sp" />

        </RadioGroup>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/camGroup"
            android:layout_marginBottom="10dp"
            android:background="@color/rDivider"/>

        <TextView
            android:id="@+id/numPicsId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/camGroup"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="Number of Pictures Taken?"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/picCountId"
            android:layout_width="75dp"
            android:layout_height="50dp"
            android:layout_below="@id/numPicsId"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="170dp"
            android:layout_marginEnd="170dp"
            android:gravity="center"
            android:alpha="50"
            android:background="#FDFBFB"
            android:ems="10"

            android:inputType="textPersonName"
            android:textSize="25sp" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="10dp"
        android:background="@color/rDivider"/>

    <Button
        android:id="@+id/btnNextt"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="20dp"
        android:background="@color/colorPrimary"
        android:text="NEXT"
        android:textColor="@color/rWhite"
        android:textSize="15sp" />

</LinearLayout>