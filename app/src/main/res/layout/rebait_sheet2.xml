<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rebaitSheetContainer2"
    android:background="@drawable/rebait_sheet_background"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="15dp"
        android:text="Re-Bait Now"
        android:textColor="@color/rPrimaryText"
        android:textSize="28dp"
        android:textStyle="bold" />

    <View
        android:id="@+id/topL"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="10dp"
        android:background="@color/rDivider"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">

        <TextView
            android:id="@+id/signsId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:gravity="center"
            android:fontFamily="sans-serif"
            android:text="Any Camera Signs/Comments?"/>


        <EditText
            android:id="@+id/signsInput"
            android:layout_width="225dp"
            android:layout_height="50dp"
            android:layout_below="@id/signsId"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="102dp"
            android:layout_marginEnd="102dp"
            android:layout_weight="1"
            android:background="#FDFBFB"
            android:gravity="center"
            android:inputType="textCapSentences|textMultiLine"
            android:maxLength="2000" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/signsInput"
            android:layout_marginBottom="10dp"
            android:background="@color/rDivider"/>

        <TextView
            android:id="@+id/sdId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/signsInput"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="168dp"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="New SD Card:"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/sdInput"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_below="@id/signsInput"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="270dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="40dp"
            android:alpha="50"
            android:hint="####"
            android:background="#FDFBFB"
            android:ems="10"
            android:gravity="center"
            android:inputType="textPersonName"
            android:textSize="25sp" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="10dp"
        android:background="@color/rDivider"/>

    <Button
        android:id="@+id/subBtn"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="20dp"
        android:background="@color/colorPrimary"
        android:text="SUBMIT"
        android:textColor="@color/rWhite"
        android:textSize="15sp" />

</LinearLayout>