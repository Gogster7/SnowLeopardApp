<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".Register">


    <TextView
        android:id="@+id/createText3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register Org"
        android:textColor="#FAF5F7"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.98" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="288dp"
        android:layout_height="45dp"
        android:elegantTextHeight="true"
        android:fontFamily="@font/aclonica"
        android:shadowColor="#B4B1B1"
        android:text="Snow Leopard"
        android:textColor="#FFFFFF"
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@+id/scrollView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.3" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="230dp"
        android:layout_height="34dp"
        android:elegantTextHeight="true"
        android:fontFamily="@font/aclonica"
        android:shadowColor="#B4B1B1"
        android:text="Register New Account"
        android:textColor="#FFFF8D"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/scrollView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.59000003" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/fullName"
                android:layout_width="375dp"
                android:layout_height="42dp"
                android:backgroundTint="#FAFAFA"
                android:ems="10"
                android:fontFamily="@font/aclonica"
                android:hint="Full Name:"
                android:inputType="textPersonName"
                android:textColorHint="#F8F8F8" />

            <EditText
                android:id="@+id/jobTitle"
                android:layout_width="375dp"
                android:layout_height="42dp"
                android:backgroundTint="#FAFAFA"
                android:ems="10"
                android:fontFamily="@font/aclonica"
                android:hint="Job Title:"
                android:inputType="textPersonName"
                android:textColorHint="#F8F8F8" />

            <EditText
                android:id="@+id/email"
                android:layout_width="375dp"
                android:layout_height="42dp"
                android:backgroundTint="#FAFAFA"
                android:ems="10"
                android:fontFamily="@font/aclonica"
                android:hint="Email:"
                android:inputType="textPersonName"
                android:textColorHint="#F8F8F8" />

            <EditText
                android:id="@+id/phone"
                android:layout_width="375dp"
                android:layout_height="42dp"
                android:backgroundTint="#FAFAFA"
                android:ems="10"
                android:fontFamily="@font/aclonica"
                android:hint="Phone Number:"
                android:inputType="textPersonName"
                android:textColorHint="#F8F8F8" />

            <EditText
                android:id="@+id/organization"
                android:layout_width="375dp"
                android:layout_height="42dp"
                android:backgroundTint="#FAFAFA"
                android:ems="10"
                android:fontFamily="@font/aclonica"
                android:hint="Organization:"
                android:inputType="textPersonName"
                android:textColorHint="#F8F8F8" />

            <Spinner
                android:id="@+id/counrty"
                android:layout_width="375dp"
                android:layout_height="42dp"
                android:backgroundTint="#FAFAFA"
                android:ems="10"
                android:fontFamily="@font/aclonica"
                android:hint="Select Country:"
                android:textColor="#F8F8F8" />

            <EditText
                android:id="@+id/password"
                android:layout_width="375dp"
                android:layout_height="42dp"
                android:backgroundTint="#FAFAFA"
                android:ems="10"
                android:fontFamily="@font/aclonica"
                android:hint="Password:"
                android:inputType="textPassword"
                android:textColorHint="#F8F8F8" />

            <EditText
                android:id="@+id/reEnter"
                android:layout_width="375dp"
                android:layout_height="42dp"
                android:backgroundTint="#FAFAFA"
                android:ems="10"
                android:fontFamily="@font/aclonica"
                android:hint="ReEnter Password:"
                android:inputType="textPassword"
                android:textColorHint="#F8F8F8" />

        </LinearLayout>

    </ScrollView>


    <Button
        android:id="@+id/registrationBtn"
        android:layout_width="362dp"
        android:layout_height="55dp"
        android:background="#FFFF8D"
        android:fontFamily="@font/aclonica"
        android:text="REGISTER"
        android:textColor="#1B1A1A"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.571"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.84000003" />

    <TextView
        android:id="@+id/createText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login Here"
        android:textColor="#FAF5F7"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.94" />

    <ProgressBar
        android:id="@+id/progressBar2"
        style="?android:attr/progressBarStyle"
        android:layout_width="44dp"
        android:layout_height="42dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollView2"
        app:layout_constraintVertical_bias="0.110000014" />

</androidx.constraintlayout.widget.ConstraintLayout>